= form_for @job_post do |f|
  - if @job_post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@job_post.errors.count, "error")} prohibited this job_post from being saved:"
      %ul
        - @job_post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :identifier
    = f.text_field :identifier
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :raw_data
    = f.text_area :raw_data
  .field
    = f.label :budget
    = f.number_field :budget
  .field
    = f.label :post_date
    = f.datetime_select :post_date
  .field
    = f.label :url
    = f.text_field :url
  .actions
    = f.submit 'Save'
