{
  "name": "upwork-jobs-piper",
  "version": "0.0.1",
  "description": "Ruby on Rails app filtering Upwork job posts and providing API for the resultset",
  "main": "index.js",
  "scripts": {
    "test": "rspec ."
  },
  "author": "Artem Vasiliev",
  "license": "MIT",
  "devDependencies": {
    "cz-conventional-changelog": "^2.0.0",
    "ghooks": "^2.0.0"
  },
  "config": {
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
